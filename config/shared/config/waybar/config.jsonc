// volume, battery, network, prc, mem, temp, clock
[
  {
    // General bar options:
    "margin": "0 0 0",
    "name": "statusbar",
    "spacing": 0,

    // Module order:
    "modules-left": ["battery", "network", "pulseaudio", "power-profiles-daemon"],
    "modules-center": ["hyprland/workspaces", "custom/notifications"],
    "modules-right": ["hyprland/language", "clock", "clock#date"],

    // Module configuration:
    "battery": {
      "format": "{icon}  {capacity}%",
      "format-charging": "ï’’  {capacity}%",
      "format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"],
      "interval": 30,
      "states": {
        "critical": 20,
        "warning": 40,
      },
    },
    "pulseaudio": {
      "format": "ï€¨  {volume}%",
      "format-muted": "î»¨ ",
    },
    "network": {
      "format": "{ifname}",
      "format-disconnected": "?",
      "format-ethernet": "î½„ ",
      "format-wifi": "ï‡« ",
      "on-click": "hyprctl dispatch exec '[float; size 800 600] kitty nmtui'",
      "tooltip-format": "{ifname} via {gwaddr}",
      "tooltip-format-disconnected": "Disconnected",
      "tooltip-format-ethernet": "{ifname}",
      "tooltip-format-wifi": "{essid} ({signalStrength}%)",
    },
    "power-profiles-daemon": {
      "format": "{icon}  {profile}",
      "format-icons": {
        "default": "ïƒ§",
        "performance": "ïƒ§",
        "balanced": "ó°",
        "power-saver": "ï¬",
      },
      "tooltip": false,
    },
    "custom/notifications": {
      "format": "{icon}",
      "format-icons": {
        "notification": "ï’š<sup>ï‘„</sup>",
        "none": "ï’š ",
        "dnd-notification": "ï‘¸<sup>ï‘„</sup>",
        "dnd-none": "ï‘¸ ",
        "inhibited-notification": "ï’š<sup>ï‘„</sup>",
        "inhibited-none": "ï’š ",
        "dnd-inhibited-notification": "ï‘¸<sup>ï‘„</sup>",
        "dnd-inhibited-none": "ï‘¸ ",
      },
      "return-type": "json",
      "exec-if": "which swaync-client",
      "exec": "swaync-client -swb",
      "on-click": "swaync-client -t -sw",
      "escape": true,
    },
    "hyprland/language": {
      // HACK: Using the workaround from https://github.com/Alexays/Waybar/issues/3676#issuecomment-2497447121.
      "us": "<span color='#E7A1D7'>î«„</span>",
      "br": "<span color='#E7A1D7'>ğŸ‡§ğŸ‡·</span>",
