{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "keyboard-shortcuts": true,

  "timeout": 10,
  "timeout-low": 5,
  "timeout-critical": 0,
  "fit-to-screen": true,

  "notification-window-width": 400,
  "control-center-margin-top": 10,
  "control-center-margin-bottom": 9,

  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": false,
  "hide-on-action": true,
  "script-fail-notify": true,
  "widgets": ["mpris", "dnd"],

  "widget-config": {
    "dnd": {
      "text": "Do Not Disturb"
    },

    "mpris": {
      "image-size": 100,
      "image-radius": 0
    }
  }
}
